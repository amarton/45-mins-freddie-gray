	body
		#tophat
			.group
			#logo
				a(href="http://www.baltimoresun.com")
					img(src="images/baltimore-sun-logo-white.png" border="0")
			.tophat-share-tools
				span.icon-facebook
				span.icon-twitter
		#slides
			#slider
				.slide(id="slide-1")
					#mobile-title
						#mobile-tier-1 THE 45-MINUTE MYSTERY OF
						#mobile-tier-2 FREDDIE GRAY'S DEATH
				.mobile-info
					.mobile-desc			
				- for (var i = 2; i <= 7; i++)
					.slide(id="slide-#{i}")
					.mobile-info
						.mobile-time <span></span> A.M.
						.mobile-location
						.mobile-desc
						.mobile-video(data-ref="#{i}") <span class="icon-video2"></span> SEE VIDEO OF EYEWITNESS ACCOUNT						
			#info.hidden.splash
				#splash
					#tier-1 THE 45-MINUTE MYSTERY OF
					#tier-2 FREDDIE GRAY'S DEATH
				#time.hidden <span></span> A.M.
				#location
				#desc
					p
				#btns
					.up.btn.direction(data-label="PREV")
						span.icon-arrow-up
					#map-btn.btn(data-label="MAP")
						span.icon-map
					#video-btn.btn(data-label="VIDEO")
						span.icon-video
					.down.btn.direction(data-label="NEXT")
						span.icon-arrow-down
			#overlay.hidden
			#map.lightbox.hidden
				img(src="")
				.close-lightbox
					span.icon-close
			#video.lightbox.hidden
				iframe(scrolling="no" seamless="seamless")
				.close-lightbox
					span.icon-close
			#mobile-video.lightbox.hidden
				iframe(scrolling="no" seamless="seamless")
				.close-lightbox
					span.icon-close			
			#more-coverage.hidden
				header MORE COVERAGE
				ul
					// li
					// 	a(href="#") The 45-minute mystery of Freddie Gray's DEATH
					// li
					// 	a(href="#") Fact-checking the Freddie Gray narrative
					li
						a(href="http://data.baltimoresun.com/news/freddie-gray/") Timeline: Freddie Gray's arrest, death and the aftermath
					li
						a(href="http://www.baltimoresun.com/news/maryland/baltimore-city/bal-map-freddie-gray-arrest-timeline-20150421-htmlstory.html") Map: Freddie Gray arrest timeline
					li
						a(href="http://www.baltimoresun.com/news/maryland/baltimore-city/bal-baltimore-sun-coverage-of-freddie-gray-20150420-storygallery.html") Full Freddie Gray coverage from The Baltimore Sun
				#end-btns
					.up.btn.direction(data-label="PREV")
						span.icon-arrow-up
					#restart-btn.btn(data-label="RESTART")
						span.icon-restart
			#credits.hidden
